<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Create a new Videogame</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <div>
        <form>
          <div class="form-group">
            <label for="distributor">Distributor</label>
            <input type="text" class="form-control" name="distributor" value="{{videogame.distributor}}" />
          </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" value="{{videogame.name}}" />
          </div>
      </div>
      <div class="form-group">
        <label for="type">Type</label>
        <input type="text" class="form-control" name="type" value="{{videogame.type}}" />
      </div>
      </form>
    </div>
  </div>
</div>