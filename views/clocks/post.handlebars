<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Create a new Clock</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <div>
        <form method="POST" action="/clocks">
          <div class="form-group">
            <label for="manufacturer">Manufacturer</label>
            <input type="text" class="form-control" name="manufacturer" value="{{clock.manufacturer}}" />
          </div>
          <div class="form-group">
            <label for="model">Model</label>
            <input type="text" class="form-control" name="model" value="{{clock.model}}" />
          </div>
      </div>
      <div class="form-group">
        <label for="type">Type</label>
        <input type="text" class="form-control" name="type" value="{{clock.type}}" />
      </div>
      <input type="submit" class="btn btn-success" value="save">
      </form>
    </div>
  </div>
</div>