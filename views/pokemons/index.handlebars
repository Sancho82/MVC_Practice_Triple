<table class="table table-striped">
  <tbody>
    {{#each pokemons}}
    <tr>
      <td>{{id}}</td>
      <td>{{manufacturer}}</td>
      <td>{{model}}</td>
      <td>{{type}}</td>
      <td><a href="/pokemons/{{id}}" class="btn btn-primary">Show</a></td>
      <td><a href="/pokemons/{{id}}/edit" class="btn btn-secondary">Edit</a></td>
      <td>
        <form method="POST" action="/pokemons/{{id}}?_method=DELETE">
          <input class="btn btn-danger" type="submit" value="Delete"/>
        </form>
      </td>
    
    </tr>
    {{/each}}    
    <td><a href="/pokemons" class="btn btn-success">New</a></td>
  </tbody>
</table>