<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Create a new Pokemon</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <div>
        <form>
          <div class="form-group">
            <label for="manufacturer">Type</label>
            <input type="text" class="form-control" name="Type" value="{{pokemon.type}}" />
          </div>
          <div class="form-group">
            <label for="model">Name</label>
            <input type="text" class="form-control" name="name" value="{{pokemon.name}}" />
          </div>
      </div>
      <div class="form-group">
        <label for="type">CP</label>
        <input type="text" class="form-control" name="cp" value="{{pokemon.cp}}" />
      </div>
      </form>
    </div>
  </div>
</div>